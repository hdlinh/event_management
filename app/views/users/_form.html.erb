<%= form_for(user) do |f| %>
  <%= render "shared/errors_messages", object: @user %>

  <div class="row">
    <div class="field form-group col-md-6">
      <%= f.label :username, t("user.name") %>
      <%= f.text_field :username, class: "form-control" %>
    </div>
    <div class="field form-group col-md-6">
      <%= f.label :Role, t("user.lb_role") %>
       <%= f.select :role_id, Role.all.collect {|x| [x.role_name, x.id]},
       {include_blank: t("user.select") }, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.label :first_name, t("user.fn") %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.label :last_name, t("user.ln") %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.label :password, t("user.pass") %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.label :password_confirmation, t("user.pwd_confirm") %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.label :email, t("user.email") %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="field form-group">
        <%= f.label :phone, t("user.phone") %>
        <%= f.telephone_field :phone, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="actions col-md-6">
      <%= f.submit %>
    </div>
  </div>
<% end %>
<%= link_to t("user.button.back"), users_path, class: "btn btn-default" %>
