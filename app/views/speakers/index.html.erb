<div class="notice" class="row">
  <% if flash[:alert] %>
    <p class="flash-error"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="flash-notice"><%= flash[:notice] %></p>
  <% end %>
</div>
<title><%= t("speaker.title") %></title>
<h1><%= t("speaker.edit_title") %></h1>
<%= form_tag destroy_speakers_path_url, method: :delete do %>
  <table class="table table-hover table-responsive">
    <thead>
      <tr>
        <th><%= t("speaker.th_del") %></th>
        <th><%= t("speaker.th_id") %></th>
        <th><%= t("speaker.th_full_name") %></th>
        <th><%= t("speaker.th_major") %></th>
        <th><%= t("speaker.th_email") %></th>
        <th><%= t("speaker.th_phone") %></th>
        <th><%= t("speaker.th_avatar") %></th>
        <th></th>
      </tr>
    </thead>
    <%= render partial: "speaker", collection: @speakers %>
  </table>
  <div class="row">
    <div class="col-md-2">
      <%= link_to t("speaker.button.new"), new_speaker_path, class: "btn btn-default" %>
    </div>
    <div class="col-md-1">
      <%= submit_tag t("speaker.button.del"), data: { confirm: t("speaker.confirm") }, class: "btn btn-default" %>
    </div>
    <div class="col-md-7 paging">
      <%= will_paginate @rooms, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
<% end %>

