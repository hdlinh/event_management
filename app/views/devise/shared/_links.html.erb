<%- if controller_name != 'sessions' %>
  <%= link_to t("devise_modal.sign_in"), login_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t("register.sign_up"), register_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t("devise_modal.forgot"), new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t("devise_modal.confirm"), new_confirmation_path(resource_name) %><br />
<% end -%>

